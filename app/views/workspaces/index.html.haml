.new-workspace__link
  = link_to new_workspace_path do
    %button.btn.btn-primary.btn-sm
      + New workspace
.workspaces-header
  .row
    .col-3
      .workspace-header__name
        Name
    .col-3
      .workspace-header__user-email
        User email
    .col-6
      .workspace-header_links
        Actions
.workspaces-container
  - workspaces.each do |workspace|
    .workspace
      .row
        .col-3
          .workspace__name
            = workspace.name
        .col-3
          .workspace__user-email
            = workspace.user_name
        .col-6
          .workspace__links
            = link_to 'Tasks', workspace_tasks_path(workspace)
            = link_to 'Edit', edit_workspace_path(workspace)